{
  "name": "mta",
  "displayName": "MTA Extension for VSCode",
  "description": "Migration Toolkit for Applications - Enterprise migration and modernization tool",
  "author": "Red Hat",
  "icon": "resources/mta-icon-color.png",
  "license": "Apache-2.0",
  "version": "0.2.0-pre.1",
  "main": "./out/extension.js",
  "publisher": "mta",
  "repository": {
    "type": "git",
    "url": "https://github.com/konveyor/editor-extensions"
  },
  "bugs": "https://github.com/konveyor/editor-extensions/issues",
  "preview": false,
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Snippets",
    "Linters"
  ],
  "keywords": [
    "Migration",
    "Migrate",
    "modernizing",
    "MTA",
    "Analyze"
  ],
  "engines": {
    "vscode": "^1.93.0",
    "node": ">=22.9.0",
    "npm": "^9.5.0 || >=10.5.2"
  },
  "enabledApiProposals": [
    "contribDiffEditorGutterToolBarMenus"
  ],
  "extensionDependencies": [
    "redhat.java"
  ],
  "activationEvents": [
    "onFileSystem:konveyorMemFs",
    "onFileSystem:konveyorReadOnly"
  ],
  "contributes": {
    "javaExtensions": [
      "../downloaded_assets/jdtls-bundles/bundle.jar"
    ],
    "commands": [
      {
        "command": "mta.openProfilesPanel",
        "title": "Manage Analysis Profile",
        "category": "MTA",
        "icon": "$(settings-gear)"
      },
      {
        "command": "mta.modelProviderSettingsOpen",
        "title": "Open the GenAI model provider configuration file",
        "category": "MTA",
        "icon": "$(gear)"
      },
      {
        "command": "mta.modelProviderSettingsBackupReset",
        "title": "Open the default the GenAI model provider configuration file and backup the current file",
        "category": "MTA",
        "icon": "$(gear)"
      },
      {
        "command": "mta.showAnalysisPanel",
        "title": "Open MTA Analysis View",
        "category": "MTA",
        "icon": "$(book)"
      },
      {
        "command": "mta.showResolutionPanel",
        "title": "Open MTA Resolution View",
        "category": "MTA",
        "icon": "$(beaker)"
      },
      {
        "command": "mta.expandAllIssues",
        "title": "Expand All",
        "category": "MTA",
        "icon": "$(expand-all)"
      },
      {
        "command": "mta.expandSingleIssue",
        "title": "Expand All",
        "category": "MTA",
        "icon": "$(expand-all)"
      },
      {
        "command": "mta.fixGroupOfIncidents",
        "title": "Resolve incidents",
        "category": "MTA",
        "icon": "$(debug-console)"
      },
      {
        "command": "mta.fixIncident",
        "title": "Resolve incident",
        "category": "MTA",
        "icon": "$(debug-console)"
      },
      {
        "command": "mta.openAnalysisDetails",
        "title": "Open Details",
        "category": "MTA",
        "icon": "$(book)"
      },
      {
        "command": "mta.overrideAnalyzerBinaries",
        "title": "Override Analyzer Binary",
        "category": "MTA",
        "icon": "$(gear)"
      },
      {
        "command": "mta.configureCustomRules",
        "title": "Configure Custom Rules",
        "category": "MTA",
        "icon": "$(gear)"
      },
      {
        "command": "mta.configureSourcesTargets",
        "title": "Configure Analysis Sources and Targets",
        "category": "MTA",
        "icon": "$(gear)"
      },
      {
        "command": "mta.configureLabelSelector",
        "title": "Configure Analysis LabelSelector",
        "category": "MTA",
        "icon": "$(gear)"
      },
      {
        "command": "mta.startServer",
        "title": "Start Server",
        "category": "MTA",
        "icon": "$(play)"
      },
      {
        "command": "mta.stopServer",
        "title": "Stop Server",
        "category": "MTA",
        "icon": "$(stop)"
      },
      {
        "command": "mta.restartServer",
        "title": "Restart Server",
        "category": "MTA",
        "icon": "$(restart)"
      },
      {
        "command": "mta.restartSolutionServer",
        "title": "Restart Solution Server",
        "category": "MTA",
        "icon": "$(restart)"
      },
      {
        "command": "mta.runAnalysis",
        "title": "Run Analysis",
        "category": "MTA",
        "icon": "$(play)"
      },
      {
        "command": "mta.loadStaticResults",
        "title": "Load results from files",
        "category": "MTA"
      },
      {
        "command": "mta.loadResultsFromDataFolder",
        "title": "Reload results",
        "category": "MTA"
      },
      {
        "command": "mta.cleanRuleSets",
        "title": "Reset analysis results",
        "category": "MTA"
      },
      {
        "command": "mta.loadRuleSets",
        "title": "Load analysis results",
        "category": "MTA"
      },
      {
        "command": "mta.applyAll",
        "title": "Apply All",
        "category": "MTA",
        "icon": "$(check)"
      },
      {
        "command": "mta.discardAll",
        "title": "Discard All",
        "category": "MTA",
        "icon": "$(discard)"
      },
      {
        "command": "mta.applyFile",
        "title": "Apply",
        "category": "MTA",
        "icon": "$(check)"
      },
      {
        "command": "mta.discardFile",
        "title": "Discard",
        "category": "MTA",
        "icon": "$(discard)"
      },
      {
        "command": "mta.copyDiff",
        "category": "MTA",
        "title": "Copy Diff"
      },
      {
        "command": "mta.copyPath",
        "category": "MTA",
        "title": "Copy Path"
      },
      {
        "command": "mta.diffView.next",
        "category": "MTA",
        "title": "Go to Next File"
      },
      {
        "command": "mta.diffView.prev",
        "category": "MTA",
        "title": "Go to Previous File"
      },
      {
        "command": "mta.diffView.viewFix",
        "category": "MTA",
        "title": "View suggested fix"
      },
      {
        "command": "mta.diffView.applyBlockInline",
        "icon": "$(check)",
        "category": "MTA",
        "title": "Apply Block"
      },
      {
        "command": "mta.diffView.applySelectionInline",
        "icon": "$(check)",
        "category": "MTA",
        "title": "Apply Selection"
      },
      {
        "command": "mta.diffView.applyBlock",
        "icon": "$(arrow-left)",
        "category": "MTA",
        "title": "Apply Block"
      },
      {
        "command": "mta.diffView.applySelection",
        "icon": "$(arrow-left)",
        "category": "MTA",
        "title": "Apply Selection"
      },
      {
        "command": "mta.generateDebugArchive",
        "title": "Generate Debug Archive",
        "category": "MTA",
        "icon": "$(bug)"
      },
      {
        "command": "mta.configureSolutionServerCredentials",
        "title": "Configure Solution Server Credentials",
        "category": "MTA",
        "icon": "$(key)"
      },
      {
        "command": "mta.showDiffActions",
        "title": "Show Diff Actions",
        "category": "MTA",
        "icon": "$(diff)"
      }
    ],
    "submenus": [
      {
        "id": "mta.submenu",
        "label": "MTA Actions"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mta",
          "title": "MTA",
          "icon": "resources/mta-icon-color.png"
        }
      ]
    },
    "views": {
      "mta": [
        {
          "id": "mta.issueView",
          "name": "MTA Issues"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "mta.showAnalysisPanel",
          "group": "navigation@1",
          "when": "view == mta.issueView"
        },
        {
          "command": "mta.showResolutionPanel",
          "group": "navigation@2",
          "when": "view == mta.issueView"
        },
        {
          "command": "mta.expandAllIssues",
          "group": "navigation@3",
          "when": "view == mta.issueView"
        }
      ],
      "view/item/context": [
        {
          "command": "mta.fixGroupOfIncidents",
          "group": "inline@3",
          "when": "view == mta.issueView && viewItem == incident-type-item"
        },
        {
          "command": "mta.fixIncident",
          "group": "inline@1",
          "when": "view == mta.issueView && viewItem == reference-item"
        },
        {
          "command": "mta.expandSingleIssue",
          "group": "inline@2",
          "when": "view == mta.issueView && viewItem == incident-type-item"
        },
        {
          "command": "mta.openAnalysisDetails",
          "group": "inline@1",
          "when": "view == mta.issueView && viewItem == incident-type-item"
        }
      ],
      "explorer/context": [
        {
          "submenu": "mta.submenu",
          "group": "navigation@1"
        }
      ],
      "mta.submenu": [],
      "commandPalette": [
        {
          "command": "mta.expandSingleIssue",
          "when": "never"
        },
        {
          "command": "mta.loadRuleSets",
          "when": "never"
        },
        {
          "command": "mta.applyFile",
          "when": "never"
        },
        {
          "command": "mta.discardFile",
          "when": "never"
        },
        {
          "command": "mta.copyDiff",
          "when": "never"
        },
        {
          "command": "mta.copyPath",
          "when": "never"
        },
        {
          "command": "mta.diffView.next",
          "when": "never"
        },
        {
          "command": "mta.diffView.prev",
          "when": "never"
        },
        {
          "command": "mta.diffView.viewFix",
          "when": "never"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "MTA",
      "properties": {
        "mta.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "http",
            "verbose",
            "debug",
            "silly"
          ],
          "default": "debug",
          "description": "Logging level used for the extension",
          "scope": "window",
          "order": 0
        },
        "mta.analyzerPath": {
          "type": "string",
          "default": "",
          "description": "Path to the analyzer binary. If not set, the extension will use the bundled binary.",
          "scope": "resource",
          "order": 2
        },
        "mta.kaiRpcServerPath": {
          "type": "string",
          "default": "",
          "description": "Path to the rpc-server binary. If not set, the extension will use the bundled binary.",
          "scope": "resource",
          "order": 1
        },
        "mta.solutionServer.url": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "URL for the MCP solution server endpoint.",
          "scope": "window",
          "order": 3
        },
        "mta.solutionServer.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable the MCP solution server client.",
          "scope": "window",
          "order": 4
        },
        "mta.solutionServer.auth": {
          "type": "boolean",
          "default": false,
          "description": "Enable authentication for the solution server.",
          "scope": "window",
          "order": 5
        },
        "mta.solutionServer.auth.realm": {
          "type": "string",
          "default": "tackle",
          "description": "Keycloak realm for authentication.",
          "scope": "window",
          "order": 6
        },
        "mta.solutionServer.auth.insecure": {
          "type": "boolean",
          "default": false,
          "description": "Skip SSL certificate verification for the solution server.",
          "scope": "window",
          "order": 7
        },
        "mta.analysis.analyzeOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Should analysis of file be run when it is saved? (Automatically enabled when Agent Mode is active)",
          "scope": "window",
          "order": 8
        },
        "mta.diffEditorType": {
          "type": "string",
          "enum": [
            "diff",
            "merge"
          ],
          "default": "merge",
          "description": "Select the editor to use when resolving proposed solutions.",
          "scope": "window",
          "order": 9
        },
        "mta.genai.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable GenAI functionality for solution generation.",
          "scope": "window",
          "order": 10
        },
        "mta.diff.autoAcceptOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically apply diff changes when saving files.",
          "scope": "window",
          "order": 11
        },
        "mta.kai.agentMode": {
          "type": "boolean",
          "default": false,
          "description": "(Experimental) Use agentic flow when getting solution. Requires automatic analysis.",
          "scope": "window",
          "order": 11
        },
        "mta.kai.excludedDiagnosticSources": {
          "type": "array",
          "default": [
            "trunk"
          ],
          "description": "List of diagnostic sources to exclude from agentic workflow.",
          "scope": "window",
          "order": 12
        },
        "mta.kai.getSolutionMaxPriority": {
          "type": [
            "number",
            "null"
          ],
          "default": 0,
          "description": "(Advanced) The maximum priority for issues to be considered by kai in a getSolution request.",
          "scope": "window",
          "order": 40
        },
        "mta.kai.getSolutionMaxEffort": {
          "type": "string",
          "enum": [
            "Low",
            "Medium",
            "High",
            "Maximum (experimental)"
          ],
          "default": "Low",
          "description": "Defines the effort level for solution generation. Higher values increase processing time.",
          "scope": "window",
          "order": 40
        },
        "mta.kai.getSolutionMaxLLMQueries": {
          "type": [
            "number",
            "null"
          ],
          "default": null,
          "minimum": 1,
          "description": "(Advanced) Maximum number of LLM queries to be made per solution request (default: No limit)",
          "scope": "window",
          "order": 40
        },
        "mta.kai.cacheDir": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Path to a directory containing cached responses",
          "scope": "window",
          "order": 50
        },
        "mta.kai.traceDir": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Path to a directory containing traces of LLM interactions",
          "scope": "window",
          "order": 50
        },
        "mta.kai.traceEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Whether to create traces of the communication with the model",
          "scope": "window",
          "order": 50
        },
        "mta.debug.webview": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for webview message handling",
          "scope": "window",
          "order": 51
        },
        "mta.kai.demoMode": {
          "type": "boolean",
          "default": false,
          "description": "Whether to run Kai in demo mode i.e. use cached LLM responses",
          "scope": "window",
          "order": 50
        },
        "mta.analysis.incidentLimit": {
          "type": "number",
          "default": 10000,
          "description": "Maximum number of incidents to report",
          "scope": "window",
          "order": 99
        },
        "mta.analysis.contextLines": {
          "type": "number",
          "default": 10,
          "description": "Number of lines of context to include in incident reports.",
          "scope": "window",
          "order": 99
        },
        "mta.analysis.codeSnipLimit": {
          "type": "number",
          "default": 10,
          "description": "Number of lines of code to include in incident reports.",
          "scope": "window",
          "order": 99
        },
        "mta.analysis.analyzeKnownLibraries": {
          "type": "boolean",
          "default": false,
          "description": "Should the analyzer analyze known open-source libraries?",
          "scope": "window",
          "order": 99
        },
        "mta.analysis.analyzeDependencies": {
          "type": "boolean",
          "default": true,
          "description": "Should the analyzer analyze project dependencies?",
          "scope": "window",
          "order": 99
        }
      }
    },
    "keybindings": []
  },
  "includedAssetPaths": {
    "kai": "../downloaded_assets/kai",
    "fernFlowerPath": "../assets/fernflower/fernflower.jar",
    "jdtls": "../downloaded_assets/jdt.ls-1.38.0",
    "jdtlsBundles": "../downloaded_assets/jdtls-bundles",
    "openSourceLabelsFile": "../downloaded_assets/opensource-labels-file/maven.default.index",
    "rulesets": "../downloaded_assets/rulesets"
  },
  "konveyor.fallbackAssets": {
    "baseUrl": "https://github.com/konveyor/kai/releases/download/v0.8.0-alpha.4/",
    "assets": {
      "linux-x64": {
        "file": "kai-analyzer-rpc-linux-x86_64",
        "sha256": "58d88fe81f2507974026cbc216f1e31e5596391cf422e783a6bb55e97816ee86"
      },
      "linux-arm64": {
        "file": "kai-analyzer-rpc-linux-aarch64",
        "sha256": "6d097960db24c77177f36f775c529861705e73f61eab0dff052aa9c52ce7a5b9"
      },
      "darwin-x64": {
        "file": "kai-analyzer-rpc-macos-x86_64",
        "sha256": "c6fc52b55426ee730a1290b662bffdba6a372ee50febda1938e4435e91227810"
      },
      "darwin-arm64": {
        "file": "kai-analyzer-rpc-macos-arm64",
        "sha256": "408243c994517528c7dbc7f4828ddb2c17bb51a2f21a2b73a6121f651174674a"
      },
      "win32-x64": {
        "file": "kai-analyzer-rpc-windows-X64.exe",
        "sha256": "f512bf519f529f5aad9b7a3cfba79125f8ec1a372afed01da2a1716bb76bfe78"
      }
    }
  },
  "scripts": {
    "clean": "rimraf out",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prebuild": "npm run clean",
    "build": "webpack --mode production",
    "dev": "webpack --watch --mode development",
    "pretest": "npm run build",
    "test": "npm run test:unit-tests && npm run test:integration",
    "test:unit-tests": "mocha",
    "test:integration": "vscode-test"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,cts,mts}": "eslint --fix",
    "*.{css,json,md,yaml,yml}": "prettier --write"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/diff": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jsesc": "^3.0.3",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.93.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "express": "^5.1.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@types/mustache": "^4.2.5",
    "adm-zip": "^0.5.16",
    "diff": "^7.0.0",
    "jsesc": "^3.1.0",
    "mustache": "^4.2.0",
    "undici": "^7.14.0",
    "winston": "^3.17.0",
    "winston-transport-vscode": "^0.1.0"
  }
}
